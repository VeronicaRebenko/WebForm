<apex:page controller="LeadProgramController" lightningStylesheets="true" cache="false" sidebar="false" showHeader="false">
    <style type="text/css">
        html {
        color: #000000;
        }
        body .pbSubsection {
        max-width: 900px;
        margin: 0 auto;
        padding: 0px 0;
        }
        body .intro {
        text-align: center;
        color: #358f89;
        font-size: 30px;
        line-height: 1.2;
        font-weight: 700;
        margin: 0 0 20px;
        }
        body .customlabel {
        font-size: 12px;
        font-style:italic;
        }
        body .bottomlabel {
        font-size: 12px;
        }
        body .commentlabel {
        font-size: 14px;
        margin-top: 20px;
        }
        body .detailList {
        font-size: 14px;
        }
        body .detailList td {
        padding: 2px 8px;
        }
        body input, body select, body textarea {
        margin-bottom: 5px;
        }
        body input[type="text"], input[type="email"], input[type="number"], input[type="tel"], input[type="password"], body select, body textarea {
        width: 100%;
        }
        body .pbBottomButtons input[type="submit"] {
        font-size: 16px;
        color: #ffffff;
        text-transform: uppercase;
        font-weight: 700;
        min-width: 120px;
        padding: 5px 10px;
        background-color: #81aa40;
        border: 0;
        -webkit-transition: color .3s linear, background .3s linear, box-shadow .3s linear;
    	transition: color .3s linear, background .3s linear, box-shadow .3s linear;
    	box-shadow: 0 18px 10px -10px rgba(0, 0, 0, .4);
        }
        body .pbBottomButtons input[type="submit"]:hover {
        color: #ffffff;
        box-shadow: none;
        background-color: #358f89;
        }
        body .pbBottomButtons {
        margin-bottom: 10px;
        }
        body input + .errorMsg, body select + .errorMsg, body textarea + .errorMsg {
        margin-top: -5px;
        }
        body .errorMsg {
    	margin-bottom: 5px;
        }
        body .detailList td > .multiSelectPicklistTable {
        margin: 0 auto;
        }
        body .bPageBlock .detailList .data2Col {
        margin-bottom: 0 !important;
        }
        body input[type="checkbox"], body input[type="radio"] {
        margin-right: 2px;
        margin-bottom: 0;
        }
        body .pbButtonb .btn, body .pbButtonb .btn + .btn {
        margin: 3px 8px !important;
        }
    </style>
  
    <apex:form >
      <apex:pageBlock >

        <div class="pbBottomButtons">
        <apex:pageBlockButtons location="Bottom">
        	<apex:commandButton action="{!step2}" value="Previous"/>
          	<apex:commandButton action="{!save}" value="Submit"/>
        </apex:pageBlockButtons>
        </div>
          
       <apex:pageBlockSection columns="1" >
           <p class="intro">
               You’re almost there, a few final details and we’ll send you your personalized immigration recommendations!
           </p>
            <div><b>Where would you like to move?*</b>
              	<apex:inputField value="{!lead.Where_move__c}" label="" />    
            </div>
            <div><b>Why do you want to move?*</b> <span class="customlabel">(Please Tick all that apply)</span> 
              <apex:inputField value="{!lead.Why_move__c}" label="" /> 
            </div>
            <div><b>When would you like to move?*</b> 
               <apex:inputField value="{!lead.When_move__c}" label="" /> 
            </div>
           <div><b>LinkedIn*</b> - So we can get to know you a little better! 
               <apex:inputField value="{!lead.LinkedIn__c}" label="" /> 
           </div>
           <div><div></div>
           		<div class="commentlabel">* Required Field</div>
           </div>
        </apex:pageBlockSection>
          
    </apex:pageBlock>
  </apex:form>
</apex:page>