            color: #ffffff;
            font-size: 14px;
            line-height: 1;
        }
        .step-list li.active {
            background-color: #fa6605;
        }
        .step-list li span {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
